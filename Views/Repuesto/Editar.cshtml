
@model Proyecto1_Paula_Ulate.Models.Repuesto
    @{
    ViewBag.Title = "Editar Repuesto";
}

<h1>Editar Repuesto</h1>

<div class="form-container">
    <h1>Editar Repuesto</h1>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.Id)

        @Html.LabelFor(m => m.Nombre)
        @Html.TextBoxFor(m => m.Nombre, new { required = "required" })
        @Html.ValidationMessageFor(m => m.Nombre)

        @Html.LabelFor(m => m.Descripcion)
        @Html.TextAreaFor(m => m.Descripcion, new { required = "required", rows = 3 })
        @Html.ValidationMessageFor(m => m.Descripcion)

        @Html.LabelFor(m => m.CantidadDisponible)
        @Html.TextBoxFor(m => m.CantidadDisponible, new { type = "number", min = "0", required = "required" })
        @Html.ValidationMessageFor(m => m.CantidadDisponible)

        @Html.LabelFor(m => m.PrecioUnitario)
        @Html.TextBoxFor(m => m.PrecioUnitario, new { type = "number", step = "0.01", min = "0", required = "required" })
        @Html.ValidationMessageFor(m => m.PrecioUnitario)

        <div class="button-container">
            <button type="submit" class="button">Guardar Cambios</button>
        </div>
    }
</div>